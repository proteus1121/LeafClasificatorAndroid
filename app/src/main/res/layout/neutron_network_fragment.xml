<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10sp"
                android:text="Network Info" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Error: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Leaf Images: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Leaf Species: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="max. Token: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Status: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Input neurons: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Hidden neurons: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Output neurons: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Learn rate: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Momentum: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Max. steps: " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dip">

                    <TextView
                        android:id="@+id/error"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/leafImages"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/leafSpecies"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/maxTokens"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <EditText
                        android:id="@+id/inputNeurons"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="10"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/hiddenNeurons"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="5"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/outputNeurons"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="2"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/learnRate"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="0.3"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/momentum"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="1.0"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/maxSteps"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="100"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/train"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:text="Train Network" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" " />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>