<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" " />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressTint="#7ab800"
                android:max="100" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="fill_parent"
                android:layout_height="200dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10sp"
                android:text="Network Info" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Error: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Leaf Images: " />

                    <!--<TextView-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="35sp"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:scaleType="fitCenter"-->
                        <!--android:text="Leaf Species: " />-->

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="max. Token: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Input neurons: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Hidden neurons: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Output neurons: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Learn rate: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Momentum: " />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="Max. steps: " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dip">

                    <TextView
                        android:id="@+id/error"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/leafImages"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <!--<TextView-->
                        <!--android:id="@+id/leafSpecies"-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="35sp"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:scaleType="fitCenter" />-->

                    <TextView
                        android:id="@+id/maxTokens"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                    <EditText
                        android:id="@+id/inputNeurons"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="10"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/hiddenNeurons"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="5"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/outputNeurons"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="2"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/learnRate"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="0.3"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/momentum"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="1.0"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/maxSteps"
                        android:layout_width="fill_parent"
                        android:layout_height="35sp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:text="100"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/train"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#7ab800"
                fancy:fb_focusColor="#9bd823"
                fancy:fb_radius="30dp"
                fancy:fb_text="Train Network"
                fancy:fb_textColor="#FFFFFF" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>